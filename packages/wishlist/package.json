{
  "name": "@nikobathrooms/wishlist",
  "version": "1.0.0",
  "description": "Wishlist functionality for Niko Bathrooms PIM - Optimized for bundle size",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./core": {
      "types": "./dist/core/index.d.ts",
      "import": "./dist/core/index.js"
    },
    "./advanced": {
      "types": "./dist/advanced/index.d.ts",
      "import": "./dist/advanced/index.js"
    },
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "vitest",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "analyze:bundle": "npm run build && npx bundle-analyzer dist/",
    "test:bundle-size": "npm run build && node scripts/check-bundle-size.js"
  },
  "dependencies": {
    "@nikobathrooms/core": "workspace:*",
    "@supabase/supabase-js": "^2.45.4"
  },
  "devDependencies": {
    "@types/node": "^22.5.0",
    "rollup": "^4.21.0",
    "typescript": "^5.5.4",
    "webpack-bundle-analyzer": "^4.10.1"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "wishlist",
    "pim",
    "bundle-optimization",
    "tree-shaking"
  ]
}