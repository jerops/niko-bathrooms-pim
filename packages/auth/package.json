{
  "name": "@nikobathrooms/auth",
  "version": "1.0.0",
  "description": "Authentication system for Niko Bathrooms PIM - Optimized for bundle size",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./core": {
      "types": "./dist/core/index.d.ts",
      "import": "./dist/core/index.js"
    },
    "./advanced": {
      "types": "./dist/advanced/index.d.ts",
      "import": "./dist/advanced/index.js"
    },
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "lint": "eslint src/",
    "clean": "rm -rf dist",
    "analyze:bundle": "npm run build && npx bundle-analyzer dist/",
    "test:bundle-size": "npm run build && node scripts/check-bundle-size.js"
  },
  "dependencies": {
    "@nikobathrooms/core": "workspace:*",
    "@supabase/supabase-js": "^2.56.0"
  },
  "devDependencies": {
    "typescript": "^5.4.2",
    "vitest": "^1.4.0",
    "webpack-bundle-analyzer": "^4.10.1"
  },
  "keywords": [
    "auth",
    "supabase",
    "pim",
    "bundle-optimization",
    "tree-shaking"
  ],
  "author": "Niko Bathrooms",
  "license": "MIT"
}
