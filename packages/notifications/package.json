{
  "name": "@nikobathrooms/notifications",
  "version": "1.0.0",
  "description": "Toast notification system for Niko Bathrooms PIM - Optimized for bundle size",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./core": {
      "types": "./dist/core/index.d.ts",
      "import": "./dist/core/index.js"
    },
    "./advanced": {
      "types": "./dist/advanced/index.d.ts",
      "import": "./dist/advanced/index.js"
    },
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "vitest",
    "analyze:bundle": "npm run build && npx bundle-analyzer dist/",
    "test:bundle-size": "npm run build && node scripts/check-bundle-size.js"
  },
  "dependencies": {
    "@nikobathrooms/core": "workspace:*"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "notifications",
    "pim",
    "bundle-optimization",
    "tree-shaking"
  ]
}